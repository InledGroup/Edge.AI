---
import { Shield, ArrowRight, Sparkles } from "lucide-preact";

const { translations = {} } = Astro.props;
---

<header class="hero">
  <div class="hero-glow"></div>
  <div class="hero-grid"></div>
  
  <div class="container">
    <div class="hero-content">
      <div class="hero-badge">
        <Shield size={14} />
        <span>{translations.badge || '100% Local AI'}</span>
      </div>
      
      <h1 class="hero-title">
        <span class="gradient-text">{translations.title || 'Your AI,'}</span>
        <br />
        <span class="text-white">{translations.title2 || 'Your Data.'}</span>
      </h1>
      
      <p class="hero-subtitle">
        {translations.subtitle || 'Chat with your documents, search the web, and use powerful AI tools. Everything stays on your device. Nothing is sent to the cloud.'}
      </p>
      
      <div class="hero-actions">
        <a href="/" class="hero-cta">
          <Sparkles size={20} />
          <span>{translations.cta || 'Start Now'}</span>
          <ArrowRight size={18} />
        </a>

        <a href="/aicloud" class="hero-cta-secondary">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="9" y1="9" x2="15" y2="9"></line>
            <line x1="9" y1="13" x2="15" y2="13"></line>
            <line x1="9" y1="17" x2="11" y2="17"></line>
          </svg>
          <span>{translations.chatbotCta || 'Create your own chatbot'}</span>
          <ArrowRight size={18} />
        </a>

        <div class="hero-secondary">
          <div class="hero-feature">
            <span class="check">✓</span>
            <span>{translations.feature1 || 'No data leaves your device'}</span>
          </div>
          <div class="hero-feature">
            <span class="check">✓</span>
            <span>{translations.feature2 || 'Works offline'}</span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="hero-visual">
      <div class="hero-card card-1">
        <div class="card-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
          </svg>
        </div>
        <div class="card-text">
          <span class="card-title">{translations.card1Title || 'Your Documents'}</span>
          <span class="card-desc">{translations.card1Desc || 'Chat with PDFs, texts & more'}</span>
        </div>
      </div>
      
      <div class="hero-card card-2">
        <div class="card-icon globe">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="2" y1="12" x2="22" y2="12"></line>
            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
          </svg>
        </div>
        <div class="card-text">
          <span class="card-title">{translations.card2Title || 'Web Search'}</span>
          <span class="card-desc">{translations.card2Desc || 'Research without tracking'}</span>
        </div>
      </div>
      
      <div class="hero-card card-3">
        <div class="card-icon brain">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2a9 9 0 0 1 9 9c0 3.1-1.6 5.8-4 7.4V21a1 1 0 0 1-1 1h-8a1 1 0 0 1-1-1v-2.6A9 9 0 0 1 12 2z"></path>
            <path d="M9 18h6"></path>
          </svg>
        </div>
        <div class="card-text">
          <span class="card-title">{translations.card3Title || 'Memory'}</span>
          <span class="card-desc">{translations.card3Desc || 'AI remembers what you want'}</span>
        </div>
      </div>
      
      <div class="hero-card card-4">
        <div class="card-icon apps">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
          </svg>
        </div>
        <div class="card-text">
          <span class="card-title">{translations.card4Title || 'Apps'}</span>
          <span class="card-desc">{translations.card4Desc || 'Connect your tools via MCP'}</span>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 7rem 1rem 4rem;
    overflow: hidden;
  }

  .hero-glow {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    width: 150%;
    height: 80%;
    background: radial-gradient(ellipse at center, rgba(40, 229, 24, 0.15) 0%, transparent 60%);
    pointer-events: none;
    z-index: 0;
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 40px 40px;
    z-index: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    position: relative;
    z-index: 1;
    justify-items: center;
  }

  @media (min-width: 1024px) {
    .container {
      grid-template-columns: 1.1fr 0.9fr;
      gap: 4rem;
      align-items: center;
      justify-items: stretch;
    }
  }

  .hero-content {
    text-align: center;
    width: 100%;
  }

  @media (min-width: 1024px) {
    .hero-content {
      text-align: left;
    }
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(40, 229, 24, 0.1);
    border: 1px solid rgba(40, 229, 24, 0.3);
    border-radius: 9999px;
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.5rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 4rem;
    }
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-primary) 0%, #a3ff7a 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .text-white {
    color: var(--color-text);
  }

  .hero-subtitle {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    max-width: 500px;
    margin: 0 auto 2rem;
  }

  @media (min-width: 1024px) {
    .hero-subtitle {
      margin: 0 0 2rem;
    }
  }

  @media (min-width: 768px) {
    .hero-subtitle {
      font-size: 1.125rem;
    }
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    width: 100%;
  }

  @media (min-width: 1024px) {
    .hero-actions {
      align-items: flex-start;
    }
  }

  .hero-cta,
  .hero-cta-secondary {
    width: 100%;
    max-width: 320px;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .hero-cta,
    .hero-cta-secondary {
      width: auto;
    }
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: var(--color-primary);
    color: #000;
    font-weight: 700;
    font-size: 1rem;
    border-radius: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 0 30px rgba(40, 229, 24, 0.3);
  }

  .hero-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 40px rgba(40, 229, 24, 0.5);
  }

  .hero-cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: var(--color-bg-tertiary);
    color: var(--color-text);
    font-weight: 600;
    font-size: 1rem;
    border-radius: 1rem;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }

  .hero-cta-secondary:hover {
    background: var(--color-bg-hover);
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }

  .hero-secondary {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  @media (min-width: 1024px) {
    .hero-secondary {
      justify-content: flex-start;
    }
  }

  .hero-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .check {
    color: var(--color-primary);
    font-weight: 700;
  }

  /* Hero Visual - Cards */
  .hero-visual {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .hero-visual {
      max-width: 450px;
      gap: 1.25rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-visual {
      max-width: none;
    }
  }

  .hero-card {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    transition: all 0.3s ease;
    animation: float 6s ease-in-out infinite;
  }

  .hero-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(40, 229, 24, 0.15);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .card-1 { animation-delay: 0s; }
  .card-2 { animation-delay: 1.5s; }
  .card-3 { animation-delay: 3s; }
  .card-4 { animation-delay: 4.5s; }

  .card-icon {
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(40, 229, 24, 0.1);
    border-radius: 0.75rem;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .card-icon.globe { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }
  .card-icon.brain { background: rgba(168, 85, 247, 0.1); color: #a855f7; }
  .card-icon.apps { background: rgba(249, 115, 22, 0.1); color: #f97316; }

  .card-text {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .card-title {
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .card-desc {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media (prefers-color-scheme: light) {
    .hero-title {
      font-weight: 900;
    }
    
    .text-white {
      color: #0a0a0a;
    }
    
    .hero-glow {
      background: radial-gradient(ellipse at center, rgba(40, 229, 24, 0.12) 0%, transparent 60%);
    }
  }
</style>
