---
import { FileText, Globe, Brain, Puzzle, Database, Lock, Zap } from "lucide-preact";

const { translations = {} } = Astro.props;

const features = [
  {
    icon: 'documents',
    title: translations.documentsTitle || 'Chat with Documents',
    description: translations.documentsDesc || 'Upload PDFs, text files, or Markdown. Ask questions and get instant answers from your own files.',
    color: 'primary'
  },
  {
    icon: 'web',
    title: translations.webTitle || 'Web Search',
    description: translations.webDesc || 'Search the internet for information. The AI analyzes sources and brings you relevant results without tracking.',
    color: 'blue'
  },
  {
    icon: 'memory',
    title: translations.memoryTitle || 'Persistent Memory',
    description: translations.memoryDesc || 'Tell the AI what to remember. It stores your preferences and context across conversations.',
    color: 'purple'
  },
  {
    icon: 'mcp',
    title: translations.mcpTitle || 'MCP Integrations',
    description: translations.mcpDesc || 'Connect to external tools and services via the Model Context Protocol. Extend AI capabilities.',
    color: 'orange'
  },
  {
    icon: 'privacy',
    title: translations.privacyTitle || '100% Private',
    description: translations.privacyDesc || 'Everything runs in your browser. Your data never leaves your device. No servers, no tracking.',
    color: 'green'
  },
  {
    icon: 'offline',
    title: translations.offlineTitle || 'Works Offline',
    description: translations.offlineDesc || 'Once models are loaded, use the AI without internet. Perfect for travel or weak connections.',
    color: 'cyan'
  }
];
---

<section id="features" class="features">
  <div class="container">
    <div class="features-header">
      <span class="features-label">{translations.label || 'Features'}</span>
      <h2 class="features-title">
        {translations.title || 'Everything you need,'}
        <span class="gradient-text">{translations.title2 || 'nothing you don\'t.'}</span>
      </h2>
      <p class="features-subtitle">
        {translations.subtitle || 'Powerful AI capabilities that respect your privacy and give you full control.'}
      </p>
    </div>

    <div class="features-grid">
      {features.map((feature, index) => (
        <div class="feature-card" style={`animation-delay: ${index * 0.1}s`}>
          <div class={`feature-icon feature-icon-${feature.color}`}>
            {feature.icon === 'documents' && <FileText size={24} />}
            {feature.icon === 'web' && <Globe size={24} />}
            {feature.icon === 'memory' && <Brain size={24} />}
            {feature.icon === 'mcp' && <Puzzle size={24} />}
            {feature.icon === 'privacy' && <Lock size={24} />}
            {feature.icon === 'offline' && <Zap size={24} />}
          </div>
          <h3 class="feature-title">{feature.title}</h3>
          <p class="feature-description">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .features {
    padding: 5rem 1rem;
    background: var(--color-bg);
    position: relative;
  }

  .features::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .features-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .features-label {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
  }

  .features-title {
    font-size: 2rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .features-title {
      font-size: 2.5rem;
    }
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-primary) 0%, #a3ff7a 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .features-subtitle {
    font-size: 1rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  @media (min-width: 768px) {
    .features-subtitle {
      font-size: 1.125rem;
    }
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.25rem;
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }

  .feature-card {
    padding: 1.5rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease backwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .feature-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: 0 10px 40px rgba(40, 229, 24, 0.1);
  }

  .feature-icon {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.75rem;
    margin-bottom: 1rem;
  }

  .feature-icon-primary {
    background: rgba(40, 229, 24, 0.1);
    color: var(--color-primary);
  }

  .feature-icon-blue {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  .feature-icon-purple {
    background: rgba(168, 85, 247, 0.1);
    color: #a855f7;
  }

  .feature-icon-orange {
    background: rgba(249, 115, 22, 0.1);
    color: #f97316;
  }

  .feature-icon-green {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }

  .feature-icon-cyan {
    background: rgba(6, 182, 212, 0.1);
    color: #06b6d4;
  }

  .feature-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .feature-description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  @media (prefers-color-scheme: light) {
    .features-title {
      font-weight: 900;
    }
  }
</style>
