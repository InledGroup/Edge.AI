---
import { Puzzle, ArrowRight, ExternalLink } from "lucide-preact";

const { translations = {} } = Astro.props;

const apps = [
  {
    name: translations.app1Name || 'InLinked',
    description: translations.app1Desc || 'Format and optimize your LinkedIn posts',
    icon: 'linkedin'
  },
  {
    name: translations.app2Name || 'InQR',
    description: translations.app2Desc || 'Generate QR codes and barcodes instantly',
    icon: 'qr'
  },
  {
    name: translations.app3Name || 'Custom MCP',
    description: translations.app3Desc || 'Connect to any service via MCP protocol',
    icon: 'mcp'
  }
];
---

<section id="apps" class="apps">
  <div class="container">
    <div class="apps-header">
      <span class="apps-label">{translations.label || 'Integrations'}</span>
      <h2 class="apps-title">
        {translations.title || 'Connect your'}
        <span class="gradient-text">{translations.title2 || 'favorite tools.'}</span>
      </h2>
      <p class="apps-subtitle">
        {translations.subtitle || 'Edge.AI integrates with external apps and services. Extend AI capabilities with MCP and custom apps.'}
      </p>
    </div>

    <div class="apps-grid">
      {apps.map((app, index) => (
        <div class="app-card" style={`animation-delay: ${index * 0.15}s`}>
          <div class="app-icon">
            {app.icon === 'linkedin' && (
              <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            {app.icon === 'qr' && (
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="7" height="7"></rect>
                <rect x="14" y="3" width="7" height="7"></rect>
                <rect x="14" y="14" width="7" height="7"></rect>
                <rect x="3" y="14" width="3" height="3"></rect>
                <rect x="7" y="14" width="3" height="3"></rect>
                <rect x="3" y="18" width="3" height="3"></rect>
                <rect x="18" y="14" width="3" height="3"></rect>
              </svg>
            )}
            {app.icon === 'mcp' && <Puzzle size={28} />}
          </div>
          <div class="app-content">
            <h3 class="app-name">{app.name}</h3>
            <p class="app-description">{app.description}</p>
          </div>
          <div class="app-arrow">
            <ArrowRight size={20} />
          </div>
        </div>
      ))}
    </div>

    <div class="apps-cta">
      <p class="apps-cta-text">
        {translations.ctaText || 'And many more integrations coming soon...'}
      </p>
    </div>
  </div>
</section>

<style>
  .apps {
    padding: 5rem 1rem;
    background: var(--color-bg);
    position: relative;
  }

  .apps::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .apps-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .apps-label {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
  }

  .apps-title {
    font-size: 2rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .apps-title {
      font-size: 2.5rem;
    }
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-primary) 0%, #a3ff7a 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .apps-subtitle {
    font-size: 1rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .apps-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .app-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    animation: fadeInUp 0.5s ease backwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .app-card:hover {
    border-color: var(--color-primary);
    transform: translateX(8px);
    box-shadow: 0 5px 20px rgba(40, 229, 24, 0.1);
  }

  .app-icon {
    width: 3.5rem;
    height: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-tertiary);
    border-radius: 0.75rem;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .app-content {
    flex: 1;
    min-width: 0;
  }

  .app-name {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .app-description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .app-arrow {
    color: var(--color-text-tertiary);
    transition: all 0.3s ease;
  }

  .app-card:hover .app-arrow {
    color: var(--color-primary);
    transform: translateX(4px);
  }

  .apps-cta {
    text-align: center;
    margin-top: 2rem;
  }

  .apps-cta-text {
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
    font-style: italic;
  }

  @media (prefers-color-scheme: light) {
    .apps-title {
      font-weight: 900;
    }
  }

  @media (max-width: 480px) {
    .app-description {
      display: none;
    }
  }
</style>
