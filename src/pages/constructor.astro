---
// Edge.AI - Constructor de Chatbots RAG
import { pwaInfo } from 'virtual:pwa-info';
import '@/styles/global.css';
---

<!DOCTYPE html>
<html lang="es" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Constructor de Chatbots RAG - Edge.AI</title>
    <meta name="description" content="Crea tu propio chatbot RAG personalizado con IA local">
    <link rel="icon" type="image/png" href="/icon-192.png">
    <meta name="theme-color" content="#28e518">
    
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    {!pwaInfo && <link rel="manifest" href="/manifest.json" />}
    
    <script>
        import '../pwa.ts';
        import { Buffer } from 'buffer';

        if (typeof window !== 'undefined') {
            // @ts-ignore
            window.global = window;
            // @ts-ignore
            if (!window.process) {
                // @ts-ignore
                window.process = {
                    env: {},
                    version: 'v20.0.0',
                    platform: 'browser',
                    browser: true,
                    nextTick: (fn: Function) => setTimeout(fn, 0),
                    cwd: () => '/'
                };
            } else {
                // @ts-ignore
                window.process.nextTick = (fn: Function) => setTimeout(fn, 0);
                // @ts-ignore
                if (!window.process.cwd) window.process.cwd = () => '/';
            }
            // @ts-ignore
            window.Buffer = Buffer;
            if (!window.crypto.webcrypto) {
                // @ts-ignore
                window.crypto.webcrypto = window.crypto;
            }
        }
    </script>
    
    <style>
        /* Colores Inledai */
        :root {
            --inled-green: #28e518;
            --inled-green-dark: #20b813;
            --inled-dark: #1a1a1a;
            --inled-gray: #2f2f2f;
            --inled-light: #f5f5f5;
        }
        
        body {
            background: linear-gradient(135deg, #1a1a1a 0%, #2f2f2f 100%);
            min-height: 100vh;
        }
        
        .inled-header {
            background: linear-gradient(90deg, #1a1a1a 0%, #2f2f2f 100%);
            border-bottom: 2px solid var(--inled-green);
        }
        
        .btn-primary {
            background: var(--inled-green);
            color: #000;
            font-weight: 600;
            transition: all 0.2s;
        }
        
        .btn-primary:hover {
            background: var(--inled-green-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(40, 229, 24, 0.4);
        }
        
        .card-custom {
            background: rgba(47, 47, 47, 0.8);
            border: 1px solid rgba(40, 229, 24, 0.2);
            backdrop-filter: blur(10px);
        }
        
        .progress-bar {
            background: linear-gradient(90deg, var(--inled-green) 0%, var(--inled-green-dark) 100%);
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="inled-header sticky top-0 z-50 shadow-lg">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-[var(--inled-green)] flex items-center justify-center">
                    <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                </div>
                <div>
                    <h1 class="text-xl font-bold text-white">Edge.AI Constructor</h1>
                    <p class="text-xs text-gray-400">Crea tu chatbot RAG personalizado</p>
                </div>
            </div>
            <a href="/" class="text-sm text-gray-400 hover:text-[var(--inled-green)] transition-colors">
                ‚Üê Volver a Edge.AI
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <div id="app"></div>
    </main>

    <!-- Constructor App -->
    <script type="module">
        import { render } from 'preact';
        import { ConstructorApp } from '../components/ConstructorApp.tsx';
        
        render(<ConstructorApp />, document.getElementById('app'));
    </script>
</body>
</html>
