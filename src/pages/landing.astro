---
import "@/styles/global.css";
import { 
  Shield, Zap, Lock, Rocket, BookOpen, Globe, Star, Check, 
  Cpu, MessageSquare, Mic, HardDrive, Share2, Briefcase, 
  User, ShieldCheck, ChevronRight, BarChart3, Database,
  FileSearch, Activity, Crosshair, Award
} from "lucide-preact";
---

<!doctype html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edge.AI | Private & Professional AI Infrastructure</title>
    <style>
        :root {
            --accent-personal: var(--color-primary);
            --accent-business: #3b82f6; 
        }
        .glass {
            background: rgba(47, 47, 47, 0.6);
            backdrop-filter: blur(12px);
            border: 1px solid var(--color-border);
        }
        .gradient-text-personal {
            background: linear-gradient(90deg, var(--color-primary), #fff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .gradient-text-business {
            background: linear-gradient(90deg, #3b82f6, var(--color-primary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .grid-bg {
            background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.03) 1px, transparent 0);
            background-size: 40px 40px;
        }
    </style>
</head>
<body class="bg-[var(--color-bg)] text-[var(--color-text)] font-sans selection:bg-[var(--color-primary)]/30">

    <!-- Language Switcher (Fixed) -->
    <div class="fixed top-6 right-6 z-[110]">
        <button
            id="langSwitcher"
            class="px-4 py-2 glass hover:bg-[var(--color-primary)]/10 text-[var(--color-text)] font-semibold rounded-xl transition-all duration-300 border border-[var(--color-border)] flex items-center gap-2"
        >
            <Globe size={18} />
            <span id="langLabel">English</span>
        </button>
    </div>

    <!-- Entry Selector (Overlay) -->
    <div id="entry-selector" class="fixed inset-0 z-[100] bg-[var(--color-bg)] flex items-center justify-center p-4">
        <div class="max-w-6xl w-full grid md:grid-cols-2 gap-8">
            <!-- Personal Side -->
            <button onclick="selectView('personal')" class="group p-8 rounded-3xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-[var(--color-primary)] transition-all text-left shadow-2xl">
                <div class="w-16 h-16 rounded-2xl bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-6 group-hover:scale-110 transition-transform">
                    <User size={40} />
                </div>
                <h2 class="text-3xl font-bold mb-4" data-i18n="landing.selector.personal_title">Personal Use</h2>
                <p class="text-[var(--color-text-secondary)] mb-6 text-lg" data-i18n="landing.selector.personal_desc">Protect your digital privacy. Chat with your files, browse without tracking, and customize your AI without giving away your personal data.</p>
                <div class="flex items-center text-[var(--color-primary)] font-bold">
                    <span data-i18n="landing.selector.personal_btn">Enter as Individual</span> <ChevronRight className="ml-2" />
                </div>
            </button>

            <!-- Business Side -->
            <button onclick="selectView('business')" class="group p-8 rounded-3xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-blue-500 transition-all text-left shadow-2xl">
                <div class="w-16 h-16 rounded-2xl bg-blue-500/10 flex items-center justify-center text-blue-500 mb-6 group-hover:scale-110 transition-transform">
                    <Briefcase size={40} />
                </div>
                <h2 class="text-3xl font-bold mb-4" data-i18n="landing.selector.business_title">Corporate Use</h2>
                <p class="text-[var(--color-text-secondary)] mb-6 text-lg" data-i18n="landing.selector.business_desc">Data sovereignty for organizations. Local AI for high-security environments, Defense, Healthcare, and Finance.</p>
                <div class="flex items-center text-blue-500 font-bold">
                    <span data-i18n="landing.selector.business_btn">Enter as Business</span> <ChevronRight className="ml-2" />
                </div>
            </button>
        </div>
    </div>

    <div id="main-content" class="hidden">
        <!-- Navigation -->
        <nav class="fixed top-0 w-full z-50 glass border-b border-[var(--color-border)]">
            <div class="container mx-auto px-6 h-20 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <img src="/inledai.png" class="w-10 h-10 rounded-xl" alt="Edge.AI">
                    <span class="text-xl font-bold tracking-tight">Edge<span class="text-[var(--color-primary)]">.AI</span></span>
                    <span id="view-badge" class="ml-4 px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest border"></span>
                </div>
                <div class="hidden md:flex items-center gap-8 text-sm font-medium text-[var(--color-text-secondary)]">
                    <a href="#features" class="hover:text-[var(--color-text)] transition-colors" data-i18n="landing.nav.features">Features</a>
                    <a id="nav-apps-link" href="#apps" class="hover:text-[var(--color-text)] transition-colors hidden" data-i18n="landing.nav.use_cases">Use Cases</a>
                    <a href="#security" class="hover:text-[var(--color-text)] transition-colors" data-i18n="landing.nav.compliance">Compliance</a>
                    <button onclick="location.reload()" class="px-4 py-2 rounded-xl bg-[var(--color-bg-tertiary)] text-[var(--color-text)] hover:bg-[var(--color-bg-hover)] transition-all border border-[var(--color-border)]" data-i18n="landing.nav.switch">Switch Profile</button>
                </div>
                <a href="/" class="px-6 py-2.5 bg-[var(--color-primary)] hover:bg-[var(--color-primary-hover)] text-black font-bold rounded-xl transition-all shadow-lg shadow-[var(--color-primary)]/20" data-i18n="landing.nav.open_app">Open App</a>
            </div>
        </nav>

        <!-- Dynamic Hero -->
        <header class="relative pt-48 pb-20 overflow-hidden grid-bg">
            <div id="hero-glow" class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[600px] h-[400px] opacity-20 blur-[120px] rounded-full pointer-events-none"></div>

            <div class="container mx-auto px-6 relative z-10 text-center md:text-left">
                <div class="max-w-4xl">
                    <h1 id="hero-title" class="text-5xl md:text-8xl font-black mb-8 leading-[0.9] tracking-tighter"></h1>
                    <p id="hero-subtitle" class="text-xl md:text-2xl text-[var(--color-text-secondary)] mb-10 leading-relaxed max-w-2xl mx-auto md:mx-0"></p>
                    <div class="flex flex-wrap gap-4 justify-center md:justify-start">
                        <a href="/" class="px-10 py-5 bg-[var(--color-text)] text-[var(--color-bg)] font-black rounded-2xl text-xl hover:scale-105 transition-all shadow-xl" data-i18n="landing.hero.cta">Launch Application</a>
                        <div class="flex items-center gap-4 px-6 py-4 glass rounded-2xl border-[var(--color-border)]">
                            <ShieldCheck className="text-[var(--color-primary)]" />
                            <span class="text-sm font-semibold" data-i18n="landing.hero.badge">100% Local · Air-Gapped AI</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Core Features -->
        <section id="features" class="py-24 border-t border-[var(--color-border)]">
            <div class="container mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-black mb-4" data-i18n="landing.features.title">Hardened Architecture</h2>
                    <p class="text-[var(--color-text-secondary)]" data-i18n="landing.features.subtitle">The power of generative AI without exposing a single bit to the network.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <div class="p-8 rounded-3xl glass hover:border-[var(--color-primary)]/30 transition-all group">
                        <div class="w-12 h-12 rounded-xl bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-6"><BookOpen /></div>
                        <h3 class="text-2xl font-bold mb-4" data-i18n="landing.features.rag_title">100% Local RAG</h3>
                        <p class="text-[var(--color-text-secondary)]" data-i18n="landing.features.rag_desc">Indexing and querying of confidential documents. Your files never leave the volatile memory of your hardware.</p>
                    </div>

                    <div class="p-8 rounded-3xl glass hover:border-[var(--color-primary)]/30 transition-all group">
                        <div class="w-12 h-12 rounded-xl bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-6"><Share2 /></div>
                        <h3 class="text-2xl font-bold mb-4" data-i18n="landing.features.mcp_title">MCP Protocol</h3>
                        <p class="text-[var(--color-text-secondary)]" data-i18n="landing.features.mcp_desc">Secure connection with SQL databases, internal repositories, or third-party tools via Model Context Protocol.</p>
                    </div>

                    <div class="p-8 rounded-3xl glass hover:border-[var(--color-primary)]/30 transition-all group">
                        <div class="w-12 h-12 rounded-xl bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-6"><Mic /></div>
                        <h3 class="text-2xl font-bold mb-4" data-i18n="landing.features.voice_title">Encrypted Voice</h3>
                        <p class="text-[var(--color-text-secondary)]" data-i18n="landing.features.voice_desc">Voice interaction processed entirely locally. No cloud processing for maximum meeting confidentiality.</p>
                    </div>

                    <div class="p-8 rounded-3xl glass hover:border-[var(--color-primary)]/30 transition-all group">
                        <div class="w-12 h-12 rounded-xl bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-6"><Database /></div>
                        <h3 class="text-2xl font-bold mb-4" data-i18n="landing.features.memory_title">Sovereign Memory</h3>
                        <p class="text-[var(--color-text-secondary)]" data-i18n="landing.features.memory_desc">History and context stored exclusively in your browser. Full control over what the AI remembers.</p>
                    </div>

                    <div class="p-8 rounded-3xl glass hover:border-[var(--color-primary)]/30 transition-all group lg:col-span-2">
                        <div class="flex flex-col md:flex-row gap-8 items-center h-full">
                            <div class="flex-1">
                                <div class="w-12 h-12 rounded-xl bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-6"><Cpu /></div>
                                <h3 class="text-2xl font-bold mb-4" data-i18n="landing.features.insuite_title">InSuite Ecosystem</h3>
                                <p class="text-[var(--color-text-secondary)]" data-i18n="landing.features.insuite_desc">Boost daily productivity with InLinked and InQR. AI-powered tools directly connected to the local intelligence.</p>
                            </div>
                            <div class="flex gap-4">
                                <div class="w-24 h-24 rounded-2xl bg-white p-4 shadow-xl flex items-center justify-center group-hover:scale-105 transition-transform">
                                    <img src="https://hosted.inled.es/INLINKED.png" alt="InLinked" class="w-full h-full object-contain" />
                                </div>
                                <div class="w-24 h-24 rounded-2xl bg-white p-4 shadow-xl flex items-center justify-center group-hover:scale-105 transition-transform">
                                    <img src="https://hosted.inled.es/inqr.png" alt="InQR" class="w-full h-full object-contain" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Business Applications -->
        <section id="apps" class="py-24 border-t border-[var(--color-border)] bg-[var(--color-bg-secondary)]/30 hidden">
            <div class="container mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-black mb-4" data-i18n="landing.apps.title">Strategic Verticals</h2>
                    <p class="text-[var(--color-text-secondary)]" data-i18n="landing.apps.subtitle">Solutions designed for environments where privacy errors are not an option.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <div class="p-6 rounded-2xl glass border-l-4 border-l-blue-500">
                        <Activity className="text-blue-500 mb-4" />
                        <h4 class="font-bold text-lg mb-2" data-i18n="landing.apps.health_title">Health & Pharma</h4>
                        <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.apps.health_desc">Analysis of clinical records and patient data without risk of leaking sensitive information.</p>
                    </div>
                    <div class="p-6 rounded-2xl glass border-l-4 border-l-[var(--color-primary)]">
                        <Crosshair className="text-[var(--color-primary)] mb-4" />
                        <h4 class="font-bold text-lg mb-2" data-i18n="landing.apps.defense_title">Defense & Military</h4>
                        <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.apps.defense_desc">Operational AI in disconnected (Air-Gapped) environments for tactical analysis and critical logistics.</p>
                    </div>
                    <div class="p-6 rounded-2xl glass border-l-4 border-l-blue-500">
                        <FileSearch className="text-blue-500 mb-4" />
                        <h4 class="font-bold text-lg mb-2" data-i18n="landing.apps.legal_title">Legal & Compliance</h4>
                        <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.apps.legal_desc">Massive contract review and internal auditing while maintaining absolute professional secrecy.</p>
                    </div>
                    <div class="p-6 rounded-2xl glass border-l-4 border-l-[var(--color-primary)]">
                        <BarChart3 className="text-[var(--color-primary)] mb-4" />
                        <h4 class="font-bold text-lg mb-2" data-i18n="landing.apps.finance_title">Finance</h4>
                        <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.apps.finance_desc">Processing financial reports and investment strategies without exposing market intelligence.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Compliance -->
        <section id="security" class="py-24 border-t border-[var(--color-border)]">
            <div class="container mx-auto px-6">
                <div class="max-w-4xl mx-auto glass p-12 rounded-[40px] border-[var(--color-primary)]/20 relative overflow-hidden text-center">
                    <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/5 to-transparent"></div>
                    <Award size={48} className="mx-auto text-[var(--color-primary)] mb-6 relative z-10" />
                    <h2 class="text-3xl font-black mb-2 relative z-10" data-i18n="landing.security.title">Verifiable Privacy by Architecture</h2>
                    <p class="text-[10px] text-[var(--color-primary)] font-bold uppercase tracking-widest mb-8 relative z-10 opacity-80" data-i18n="landing.security.warning">Technical Compliance · Not formally certified</p>
                    
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 relative z-10">
                        <div class="space-y-2">
                            <div class="text-[var(--color-primary)] font-black text-2xl">GDPR</div>
                            <div class="text-[10px] text-[var(--color-text-tertiary)] uppercase tracking-tighter" data-i18n="landing.security.gdpr">Privacy by Design</div>
                        </div>
                        <div class="space-y-2 border-l border-white/5">
                            <div class="text-[var(--color-primary)] font-black text-2xl">HIPAA</div>
                            <div class="text-[10px] text-[var(--color-text-tertiary)] uppercase tracking-tighter" data-i18n="landing.security.hipaa">Local Medical Security</div>
                        </div>
                        <div class="space-y-2 border-l border-white/5">
                            <div class="text-[var(--color-primary)] font-black text-2xl">ISO 27001</div>
                            <div class="text-[10px] text-[var(--color-text-tertiary)] uppercase tracking-tighter" data-i18n="landing.security.iso">Hardened Architecture</div>
                        </div>
                        <div class="space-y-2 border-l border-white/5">
                            <div class="text-[var(--color-primary)] font-black text-2xl">SOC 2</div>
                            <div class="text-[10px] text-[var(--color-text-tertiary)] uppercase tracking-tighter" data-i18n="landing.security.soc">Technical Secrecy</div>
                        </div>
                    </div>
                    
                    <p class="mt-12 text-sm text-[var(--color-text-secondary)] max-w-2xl mx-auto italic" data-i18n="landing.security.disclaimer">
                        "Edge.AI is not a third-party certified entity. However, its 100% local architecture eliminates the attack surface and external data processing, allowing your organization to meet the strictest security standards natively. We invite you to audit our open-source code."
                    </p>
                </div>
            </div>
        </section>

        <!-- Sovereignty Section -->
        <section id="business-exclusive" class="hidden py-24 glass border-y border-[var(--color-border)]">
            <div class="container mx-auto px-6">
                <div class="grid md:grid-cols-2 gap-16 items-center">
                    <div>
                        <h2 class="text-5xl font-black mb-8 tracking-tighter" data-i18n="landing.sovereignty.title">Enterprise Data Sovereignty</h2>
                        <div class="space-y-8">
                            <div class="flex gap-4">
                                <div class="p-2 h-fit rounded-lg bg-[var(--color-primary)]/20 text-[var(--color-primary)]"><Shield /></div>
                                <div>
                                    <h4 class="font-bold text-xl mb-2" data-i18n="landing.sovereignty.secrecy_title">Industrial Secrecy</h4>
                                    <p class="text-[var(--color-text-secondary)]" data-i18n="landing.sovereignty.secrecy_desc">Prevent intellectual property leaks. No training data or queries ever leave your infrastructure.</p>
                                </div>
                            </div>
                            <div class="flex gap-4">
                                <div class="p-2 h-fit rounded-lg bg-blue-500/20 text-blue-500"><BarChart3 /></div>
                                <div>
                                    <h4 class="font-bold text-xl mb-2" data-i18n="landing.sovereignty.nodes_title">Multi-Node Deployment</h4>
                                    <p class="text-[var(--color-text-secondary)]" data-i18n="landing.sovereignty.nodes_desc">Connect local instances with private inference servers for high-performance teams.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="relative">
                        <div class="absolute inset-0 bg-blue-500/20 blur-[100px] rounded-full"></div>
                        <div class="relative p-12 glass rounded-3xl border-blue-500/30 text-center">
                            <Database size={80} className="mx-auto text-blue-500 mb-6" />
                            <h3 class="text-2xl font-bold mb-4" data-i18n="landing.sovereignty.compliance_title">Direct Compliance</h3>
                            <p class="text-[var(--color-text-secondary)]" data-i18n="landing.sovereignty.compliance_desc">By not processing data on third-party servers, compliance with GDPR, HIPAA, or internal audits is intrinsic.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <footer class="py-12 border-t border-[var(--color-border)] mt-20">
            <div class="container mx-auto px-6 text-center">
                <div class="flex items-center justify-center gap-3 mb-6">
                    <img src="/inledai.png" class="w-8 h-8 rounded-lg" alt="Logo">
                    <span class="font-bold text-[var(--color-text)]">Edge.AI</span>
                </div>
                <p class="text-[var(--color-text-secondary)] text-sm mb-4 italic" data-i18n="landing.footer.tagline">Since when should technology compromise your privacy?</p>
                <div class="text-xs text-[var(--color-text-tertiary)]">
                    © 2026 Inled Group · GPL v3 License · 100% Local Intelligence
                </div>
            </div>
        </footer>
    </div>

    <script>
        import { i18nStore } from '@/lib/stores/i18n';

        const content = {
            personal: {
                titleKey: "landing.hero.personal_title",
                subtitleKey: "landing.hero.personal_subtitle",
                badgeKey: "landing.hero.personal_badge",
                badgeClass: "text-[var(--color-primary)] border-[var(--color-primary)]/30",
                glowColor: "var(--color-primary)"
            },
            business: {
                titleKey: "landing.hero.business_title",
                subtitleKey: "landing.hero.business_subtitle",
                badgeKey: "landing.hero.business_badge",
                badgeClass: "text-blue-500 border-blue-500/30",
                glowColor: "#3b82f6"
            }
        };

        let currentView = null;

        function updateTexts() {
            const elements = document.querySelectorAll('[data-i18n]');
            elements.forEach(el => {
                const key = el.getAttribute('data-i18n');
                if (key) {
                    el.innerHTML = i18nStore.t(key);
                }
            });

            // Update Dynamic Hero if selected
            if (currentView) {
                const title = document.getElementById('hero-title');
                const subtitle = document.getElementById('hero-subtitle');
                const badge = document.getElementById('view-badge');
                
                title.innerHTML = i18nStore.t(content[currentView].titleKey);
                subtitle.textContent = i18nStore.t(content[currentView].subtitleKey);
                badge.textContent = i18nStore.t(content[currentView].badgeKey);
            }

            // Update Switcher
            const langLabel = document.getElementById('langLabel');
            if (langLabel) {
                langLabel.textContent = i18nStore.current === 'es' ? 'English' : 'Español';
            }
        }

        window.selectView = function(view) {
            currentView = view;
            const entry = document.getElementById('entry-selector');
            const main = document.getElementById('main-content');
            const badge = document.getElementById('view-badge');
            const bizSect = document.getElementById('business-exclusive');
            const appsSect = document.getElementById('apps');
            const navAppsLink = document.getElementById('nav-apps-link');
            const glow = document.getElementById('hero-glow');

            updateTexts();
            
            badge.className = `ml-4 px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest border ${content[view].badgeClass}`;
            glow.style.backgroundColor = content[view].glowColor;

            if (view === 'business') {
                bizSect.classList.remove('hidden');
                appsSect.classList.remove('hidden');
                navAppsLink.classList.remove('hidden');
            } else {
                bizSect.classList.add('hidden');
                appsSect.classList.add('hidden');
                navAppsLink.classList.add('hidden');
            }

            entry.style.opacity = '0';
            entry.style.transition = 'opacity 0.5s ease';
            
            setTimeout(() => {
                entry.classList.add('hidden');
                main.classList.remove('hidden');
                window.scrollTo(0, 0);
            }, 500);
        }

        // Handle switcher click
        const langSwitcher = document.getElementById('langSwitcher');
        if (langSwitcher) {
            langSwitcher.addEventListener('click', async () => {
                const nextLang = i18nStore.current === 'es' ? 'en' : 'es';
                await i18nStore.setLanguage(nextLang);
                updateTexts();
            });
        }

        // Initialize on load
        if (typeof window !== 'undefined') {
            i18nStore.init().then(() => {
                updateTexts();
            });
        }
    </script>
</body>
</html>
