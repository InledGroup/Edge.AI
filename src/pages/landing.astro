---
import LandingLayout from '@/components/landing/LandingLayout.astro';

const acceptedLanguages = ['en', 'es'];
const urlLang = Astro.url.searchParams.get('lang');

// Detection logic
let detectedLang = 'es';
if (urlLang && acceptedLanguages.includes(urlLang)) {
  detectedLang = urlLang;
}
---

<LandingLayout lang={detectedLang} />
