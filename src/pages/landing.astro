---
import "@/styles/global.css";
import { 
  Shield, Zap, Lock, Rocket, BookOpen, Globe, Star, Check, 
  Cpu, MessageSquare, Mic, HardDrive, Share2, Briefcase, 
  User, ShieldCheck, ChevronRight, BarChart3, Database,
  FileSearch, Activity, Crosshair, Award
} from "lucide-preact";
---

<!doctype html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edge.AI | Private & Professional AI Infrastructure</title>
    <style>
        :root {
            --accent-personal: var(--color-primary);
            --accent-business: #3b82f6; 
        }
        .glass {
            background: rgba(47, 47, 47, 0.85);
            backdrop-filter: blur(8px);
            border: 1px solid var(--color-border);
        }
        .gradient-text-personal {
            background: linear-gradient(90deg, var(--color-primary), #fff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .gradient-text-business {
            background: linear-gradient(90deg, #3b82f6, var(--color-primary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .grid-bg {
            background-image: 
                linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
            background-size: 32px 32px;
        }
        @media (max-width: 768px) {
            .grid-bg {
                background-size: 24px 24px;
            }
        }
    </style>
</head>
<body class="bg-[var(--color-bg)] text-[var(--color-text)] font-sans selection:bg-[var(--color-primary)]/30">

    <!-- Language Switcher (Fixed) -->
    <div class="fixed top-4 right-14 md:top-6 md:right-6 z-[110]">
        <button
            id="langSwitcher"
            class="px-3 py-2 md:px-4 md:py-2 glass hover:bg-[var(--color-primary)]/10 text-[var(--color-text)] font-semibold rounded-lg md:rounded-xl transition-all duration-300 border border-[var(--color-border)] flex items-center gap-2 text-sm md:text-base"
        >
            <Globe size={18} />
            <span id="langLabel" class="hidden md:inline">English</span>
        </button>
    </div>

    <!-- Entry Selector (Overlay) -->
    <div id="entry-selector" class="fixed inset-0 z-[100] bg-[var(--color-bg)] flex items-center justify-center p-4 overflow-y-auto">
        <div class="max-w-6xl w-full grid md:grid-cols-2 gap-6 md:gap-8 my-8">
            <!-- Personal Side -->
            <button onclick="selectView('personal')" class="group p-6 md:p-8 rounded-xl md:rounded-3xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-[var(--color-primary)] hover:bg-[var(--color-bg-tertiary)] transition-all text-left">
                <div class="w-12 h-12 md:w-16 md:h-16 rounded-xl md:rounded-2xl bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-4 md:mb-6 group-hover:scale-105 md:group-hover:scale-110 transition-transform">
                    <User size={24} />
                </div>
                <h2 class="text-xl md:text-3xl font-bold mb-3 md:mb-4" data-i18n="landing.selector.personal_title">Personal Use</h2>
                <p class="text-[var(--color-text-secondary)] mb-4 md:mb-6 text-base md:text-lg" data-i18n="landing.selector.personal_desc">Protect your digital privacy. Chat with your files, browse without tracking, and customize your AI without giving away your personal data.</p>
                <div class="flex items-center text-[var(--color-primary)] font-bold text-sm md:text-base">
                    <span data-i18n="landing.selector.personal_btn">Enter as Individual</span> <ChevronRight size={16} className="ml-2" />
                </div>
            </button>

            <!-- Business Side -->
            <button onclick="selectView('business')" class="group p-6 md:p-8 rounded-xl md:rounded-3xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-blue-500 hover:bg-[var(--color-bg-tertiary)] transition-all text-left">
                <div class="w-12 h-12 md:w-16 md:h-16 rounded-xl md:rounded-2xl bg-blue-500/10 flex items-center justify-center text-blue-500 mb-4 md:mb-6 group-hover:scale-105 md:group-hover:scale-110 transition-transform">
                    <Briefcase size={24} />
                </div>
                <h2 class="text-xl md:text-3xl font-bold mb-3 md:mb-4" data-i18n="landing.selector.business_title">Corporate Use</h2>
                <p class="text-[var(--color-text-secondary)] mb-4 md:mb-6 text-base md:text-lg" data-i18n="landing.selector.business_desc">Data sovereignty for organizations. Local AI for high-security environments, Defense, Healthcare, and Finance.</p>
                <div class="flex items-center text-blue-500 font-bold text-sm md:text-base">
                    <span data-i18n="landing.selector.business_btn">Enter as Business</span> <ChevronRight size={16} className="ml-1 md:ml-2" />
                </div>
            </button>
        </div>
    </div>

    <div id="main-content" class="hidden">
        <!-- Mobile Navigation Menu -->
        <div id="mobileNav" class="fixed inset-0 z-[140] bg-[var(--color-bg)] hidden">
            <div class="flex flex-col items-center justify-center h-full gap-8 p-8 pt-24">
                <a href="#features" class="text-2xl font-bold text-[var(--color-text)] hover:text-[var(--color-primary)] transition-colors" data-i18n="landing.nav.features">Features</a>
                <a id="mobile-nav-apps-link" href="#apps" class="text-2xl font-bold text-[var(--color-text)] hover:text-[var(--color-primary)] transition-colors hidden" data-i18n="landing.nav.use_cases">Use Cases</a>
                <a href="#security" class="text-2xl font-bold text-[var(--color-text)] hover:text-[var(--color-primary)] transition-colors" data-i18n="landing.nav.compliance">Compliance</a>
                <button onclick="location.reload()" class="text-2xl font-bold text-[var(--color-text-secondary)] hover:text-[var(--color-primary)] transition-colors" data-i18n="landing.nav.switch">Switch Profile</button>
                <a href="/" class="mt-4 px-8 py-4 bg-[var(--color-primary)] text-black font-bold rounded-xl" data-i18n="landing.nav.open_app">Open App</a>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="fixed top-0 w-full z-50 glass border-b border-[var(--color-border)]">
            <div class="container mx-auto px-4 md:px-6 h-16 md:h-20 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <img src="/inledai.png" class="w-8 h-8 md:w-10 md:h-10 rounded-lg md:rounded-xl" alt="Edge.AI">
                    <span class="text-lg md:text-xl font-bold tracking-tight">Edge<span class="text-[var(--color-primary)]">.AI</span></span>
                    <span id="view-badge" class="hidden md:inline ml-2 md:ml-4 px-2 py-0.5 md:px-3 md:py-1 rounded-full text-[8px] md:text-[10px] font-bold uppercase tracking-widest border"></span>
                </div>
                <div class="hidden md:flex items-center gap-6 md:gap-8 text-sm font-medium text-[var(--color-text-secondary)]">
                    <a href="#features" class="hover:text-[var(--color-text)] transition-colors" data-i18n="landing.nav.features">Features</a>
                    <a id="nav-apps-link" href="#apps" class="hover:text-[var(--color-text)] transition-colors hidden" data-i18n="landing.nav.use_cases">Use Cases</a>
                    <a href="#security" class="hover:text-[var(--color-text)] transition-colors" data-i18n="landing.nav.compliance">Compliance</a>
                    <button onclick="location.reload()" class="px-3 py-1.5 md:px-4 md:py-2 rounded-lg md:rounded-xl bg-[var(--color-bg-tertiary)] text-[var(--color-text)] hover:bg-[var(--color-bg-hover)] transition-all border border-[var(--color-border)] text-sm" data-i18n="landing.nav.switch">Switch</button>
                </div>
                <div class="flex items-center gap-2 md:hidden">
                    <a href="/" class="px-3 py-2 bg-[var(--color-primary)] text-black font-bold rounded-lg text-sm">Open App</a>
                </div>
                <a href="/" class="hidden md:inline-block px-4 py-2 md:px-6 md:py-2.5 bg-[var(--color-primary)] hover:bg-[var(--color-primary-hover)] text-black font-bold rounded-lg md:rounded-xl transition-all text-sm md:text-base" data-i18n="landing.nav.open_app">Open App</a>
            </div>
        </nav>

        <!-- Dynamic Hero -->
        <header class="relative pt-24 pb-12 md:pt-48 md:pb-20 overflow-hidden grid-bg">
            <div id="hero-glow" class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[200px] h-[200px] md:w-[400px] md:h-[300px] lg:w-[600px] lg:h-[400px] opacity-10 md:opacity-20 blur-[80px] md:blur-[120px] rounded-full pointer-events-none transition-opacity duration-500"></div>

            <div class="container mx-auto px-4 md:px-6 relative z-10 text-center md:text-left">
                <div class="max-w-4xl">
                    <h1 id="hero-title" class="text-3xl md:text-5xl lg:text-7xl xl:text-8xl font-black mb-6 md:mb-8 leading-[0.95] md:leading-[0.9] tracking-tight md:tracking-tighter"></h1>
                    <p id="hero-subtitle" class="text-base md:text-xl lg:text-2xl text-[var(--color-text-secondary)] mb-8 md:mb-10 leading-relaxed max-w-2xl mx-auto md:mx-0"></p>
                    <div class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-center md:justify-start">
                        <a href="/" class="px-6 py-3 md:px-10 md:py-5 bg-[var(--color-text)] text-[var(--color-bg)] font-bold md:font-black rounded-xl md:rounded-2xl text-base md:text-xl hover:scale-[1.02] transition-all" data-i18n="landing.hero.cta">Launch Application</a>
                        <div class="flex items-center gap-3 px-4 py-3 glass rounded-xl border-[var(--color-border)]">
                            <ShieldCheck size={16} className="text-[var(--color-primary)]" />
                            <span class="text-xs md:text-sm font-semibold" data-i18n="landing.hero.badge">100% Local</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Core Features -->
        <section id="features" class="py-12 md:py-24 border-t border-[var(--color-border)]">
            <div class="container mx-auto px-4 md:px-6">
                <div class="text-center mb-10 md:mb-16">
                    <h2 class="text-2xl md:text-4xl font-bold mb-3 md:mb-4" data-i18n="landing.features.title">Hardened Architecture</h2>
                    <p class="text-[var(--color-text-secondary)] text-sm md:text-base" data-i18n="landing.features.subtitle">The power of generative AI without exposing a single bit to the network.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-8">
                    <div class="p-5 md:p-8 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-[var(--color-primary)]/50 transition-all">
                        <div class="w-10 h-10 md:w-12 md:h-12 rounded-lg bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-4"><BookOpen size={20} /></div>
                        <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-3" data-i18n="landing.features.rag_title">100% Local RAG</h3>
                        <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.features.rag_desc">Indexing and querying of confidential documents. Your files never leave the volatile memory of your hardware.</p>
                    </div>

                    <div class="p-5 md:p-8 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-[var(--color-primary)]/50 transition-all">
                        <div class="w-10 h-10 md:w-12 md:h-12 rounded-lg bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-4"><Share2 size={20} /></div>
                        <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-3" data-i18n="landing.features.mcp_title">MCP Protocol</h3>
                        <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.features.mcp_desc">Secure connection with SQL databases, internal repositories, or third-party tools via Model Context Protocol.</p>
                    </div>

                    <div class="p-5 md:p-8 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-[var(--color-primary)]/50 transition-all">
                        <div class="w-10 h-10 md:w-12 md:h-12 rounded-lg bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-4"><Mic size={20} /></div>
                        <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-3" data-i18n="landing.features.voice_title">Encrypted Voice</h3>
                        <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.features.voice_desc">Voice interaction processed entirely locally. No cloud processing for maximum meeting confidentiality.</p>
                    </div>

                    <div class="p-5 md:p-8 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-[var(--color-primary)]/50 transition-all">
                        <div class="w-10 h-10 md:w-12 md:h-12 rounded-lg bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-4"><Database size={20} /></div>
                        <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-3" data-i18n="landing.features.memory_title">Sovereign Memory</h3>
                        <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.features.memory_desc">History and context stored exclusively in your browser. Full control over what the AI remembers.</p>
                    </div>

                    <div class="p-5 md:p-8 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] hover:border-[var(--color-primary)]/50 transition-all lg:col-span-2">
                        <div class="flex flex-col md:flex-row gap-4 md:gap-8 items-center h-full">
                            <div class="flex-1">
                                <div class="w-10 h-10 md:w-12 md:h-12 rounded-lg bg-[var(--color-primary)]/10 flex items-center justify-center text-[var(--color-primary)] mb-3 md:mb-4"><Cpu size={20} /></div>
                                <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-3" data-i18n="landing.features.insuite_title">InSuite Ecosystem</h3>
                                <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.features.insuite_desc">Boost daily productivity with InLinked and InQR. AI-powered tools directly connected to the local intelligence.</p>
                            </div>
                            <div class="flex gap-3 md:gap-4">
                                <div class="w-16 h-16 md:w-20 md:h-20 rounded-xl bg-white p-2 md:p-3 shadow flex items-center justify-center">
                                    <img src="https://hosted.inled.es/INLINKED.png" alt="InLinked" class="w-full h-full object-contain" />
                                </div>
                                <div class="w-16 h-16 md:w-20 md:h-20 rounded-xl bg-white p-2 md:p-3 shadow flex items-center justify-center">
                                    <img src="https://hosted.inled.es/inqr.png" alt="InQR" class="w-full h-full object-contain" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Business Applications -->
        <section id="apps" class="py-12 md:py-24 border-t border-[var(--color-border)] bg-[var(--color-bg-secondary)]/30 hidden">
            <div class="container mx-auto px-4 md:px-6">
                <div class="text-center mb-10 md:mb-16">
                    <h2 class="text-2xl md:text-4xl font-bold mb-3 md:mb-4" data-i18n="landing.apps.title">Strategic Verticals</h2>
                    <p class="text-[var(--color-text-secondary)] text-sm md:text-base" data-i18n="landing.apps.subtitle">Solutions designed for environments where privacy errors are not an option.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
                    <div class="p-4 md:p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] border-l-4 border-l-blue-500">
                        <Activity size={20} className="text-blue-500 mb-3" />
                        <h4 class="font-bold text-base md:text-lg mb-2" data-i18n="landing.apps.health_title">Health & Pharma</h4>
                        <p class="text-xs md:text-sm text-[var(--color-text-secondary)]" data-i18n="landing.apps.health_desc">Analysis of clinical records and patient data without risk of leaking sensitive information.</p>
                    </div>
                    <div class="p-4 md:p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] border-l-4 border-l-[var(--color-primary)]">
                        <Crosshair size={20} className="text-[var(--color-primary)] mb-3" />
                        <h4 class="font-bold text-base md:text-lg mb-2" data-i18n="landing.apps.defense_title">Defense & Military</h4>
                        <p class="text-xs md:text-sm text-[var(--color-text-secondary)]" data-i18n="landing.apps.defense_desc">Operational AI in disconnected (Air-Gapped) environments for tactical analysis and critical logistics.</p>
                    </div>
                    <div class="p-4 md:p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] border-l-4 border-l-blue-500">
                        <FileSearch size={20} className="text-blue-500 mb-3" />
                        <h4 class="font-bold text-base md:text-lg mb-2" data-i18n="landing.apps.legal_title">Legal & Compliance</h4>
                        <p class="text-xs md:text-sm text-[var(--color-text-secondary)]" data-i18n="landing.apps.legal_desc">Massive contract review and internal auditing while maintaining absolute professional secrecy.</p>
                    </div>
                    <div class="p-4 md:p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] border-l-4 border-l-[var(--color-primary)]">
                        <BarChart3 size={20} className="text-[var(--color-primary)] mb-3" />
                        <h4 class="font-bold text-base md:text-lg mb-2" data-i18n="landing.apps.finance_title">Finance</h4>
                        <p class="text-xs md:text-sm text-[var(--color-text-secondary)]" data-i18n="landing.apps.finance_desc">Processing financial reports and investment strategies without exposing market intelligence.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Compliance -->
        <section id="security" class="py-12 md:py-24 border-t border-[var(--color-border)]">
            <div class="container mx-auto px-4 md:px-6">
                <div class="max-w-4xl mx-auto p-6 md:p-12 rounded-xl md:rounded-[40px] border border-[var(--color-border)] bg-[var(--color-bg-secondary)] text-center">
                    <Award size={40} className="mx-auto text-[var(--color-primary)] mb-4 md:mb-6" />
                    <h2 class="text-xl md:text-3xl font-bold mb-2" data-i18n="landing.security.title">Verifiable Privacy by Architecture</h2>
                    <p class="text-[10px] text-[var(--color-primary)] font-bold uppercase tracking-widest mb-6 md:mb-8 opacity-80" data-i18n="landing.security.warning">Technical Compliance · Not formally certified</p>
                    
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8">
                        <div class="space-y-1 md:space-y-2">
                            <div class="text-[var(--color-primary)] font-bold text-lg md:text-2xl">GDPR</div>
                            <div class="text-[10px] text-[var(--color-text-tertiary)] uppercase" data-i18n="landing.security.gdpr">Privacy by Design</div>
                        </div>
                        <div class="space-y-1 md:space-y-2 border-t md:border-t-0 md:border-l border-[var(--color-border)] pt-3 md:pt-0 md:pl-4">
                            <div class="text-[var(--color-primary)] font-bold text-lg md:text-2xl">HIPAA</div>
                            <div class="text-[10px] text-[var(--color-text-tertiary)] uppercase" data-i18n="landing.security.hipaa">Local Medical Security</div>
                        </div>
                        <div class="space-y-1 md:space-y-2 border-t md:border-t-0 md:border-l border-[var(--color-border)] pt-3 md:pt-0 md:pl-4">
                            <div class="text-[var(--color-primary)] font-bold text-lg md:text-2xl">ISO 27001</div>
                            <div class="text-[10px] text-[var(--color-text-tertiary)] uppercase" data-i18n="landing.security.iso">Hardened Architecture</div>
                        </div>
                        <div class="space-y-1 md:space-y-2 border-t md:border-t-0 md:border-l border-[var(--color-border)] pt-3 md:pt-0 md:pl-4">
                            <div class="text-[var(--color-primary)] font-bold text-lg md:text-2xl">SOC 2</div>
                            <div class="text-[10px] text-[var(--color-text-tertiary)] uppercase" data-i18n="landing.security.soc">Technical Secrecy</div>
                        </div>
                    </div>
                    
                    <p class="mt-8 md:mt-12 text-xs md:text-sm text-[var(--color-text-secondary)] max-w-2xl mx-auto italic" data-i18n="landing.security.disclaimer">
                        "Edge.AI is not a third-party certified entity. However, its 100% local architecture eliminates the attack surface and external data processing, allowing your organization to meet the strictest security standards natively."
                    </p>
                </div>
            </div>
        </section>

        <!-- Sovereignty Section -->
        <section id="business-exclusive" class="hidden py-12 md:py-24 border-y border-[var(--color-border)] bg-[var(--color-bg-secondary)]/30">
            <div class="container mx-auto px-4 md:px-6">
                <div class="grid md:grid-cols-2 gap-8 md:gap-16 items-center">
                    <div>
                        <h2 class="text-2xl md:text-5xl font-bold mb-6 md:mb-8 tracking-tight" data-i18n="landing.sovereignty.title">Enterprise Data Sovereignty</h2>
                        <div class="space-y-6 md:space-y-8">
                            <div class="flex gap-3 md:gap-4">
                                <div class="p-2 h-fit rounded-lg bg-[var(--color-primary)]/20 text-[var(--color-primary)]"><Shield size={18} /></div>
                                <div>
                                    <h4 class="font-bold text-base md:text-xl mb-1 md:mb-2" data-i18n="landing.sovereignty.secrecy_title">Industrial Secrecy</h4>
                                    <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.sovereignty.secrecy_desc">Prevent intellectual property leaks. No training data or queries ever leave your infrastructure.</p>
                                </div>
                            </div>
                            <div class="flex gap-3 md:gap-4">
                                <div class="p-2 h-fit rounded-lg bg-blue-500/20 text-blue-500"><BarChart3 size={18} /></div>
                                <div>
                                    <h4 class="font-bold text-base md:text-xl mb-1 md:mb-2" data-i18n="landing.sovereignty.nodes_title">Multi-Node Deployment</h4>
                                    <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.sovereignty.nodes_desc">Connect local instances with private inference servers for high-performance teams.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="relative mt-8 md:mt-0">
                        <div class="p-6 md:p-12 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)] text-center">
                            <Database size={48} className="mx-auto text-blue-500 mb-4 md:mb-6" />
                            <h3 class="text-lg md:text-2xl font-bold mb-2 md:mb-4" data-i18n="landing.sovereignty.compliance_title">Direct Compliance</h3>
                            <p class="text-sm text-[var(--color-text-secondary)]" data-i18n="landing.sovereignty.compliance_desc">By not processing data on third-party servers, compliance with GDPR, HIPAA, or internal audits is intrinsic.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <footer class="py-8 md:py-12 border-t border-[var(--color-border)] mt-12 md:mt-20">
            <div class="container mx-auto px-4 md:px-6 text-center">
                <div class="flex items-center justify-center gap-3 mb-4 md:mb-6">
                    <img src="/inledai.png" class="w-6 h-6 md:w-8 md:h-8 rounded-lg" alt="Logo">
                    <span class="font-bold text-sm md:text-base text-[var(--color-text)]">Edge.AI</span>
                </div>
                <p class="text-[var(--color-text-secondary)] text-xs md:text-sm mb-3 md:mb-4" data-i18n="landing.footer.tagline">Since when should technology compromise your privacy?</p>
                <div class="text-[10px] md:text-xs text-[var(--color-text-tertiary)]">
                    © 2026 Inled Group · GPL v3 License · 100% Local Intelligence
                </div>
            </div>
        </footer>
    </div>

    <script>
        import { i18nStore } from '@/lib/stores/i18n';

        const content = {
            personal: {
                titleKey: "landing.hero.personal_title",
                subtitleKey: "landing.hero.personal_subtitle",
                badgeKey: "landing.hero.personal_badge",
                badgeClass: "text-[var(--color-primary)] border-[var(--color-primary)]/30",
                glowColor: "var(--color-primary)"
            },
            business: {
                titleKey: "landing.hero.business_title",
                subtitleKey: "landing.hero.business_subtitle",
                badgeKey: "landing.hero.business_badge",
                badgeClass: "text-blue-500 border-blue-500/30",
                glowColor: "#3b82f6"
            }
        };

        let currentView = null;

        function updateTexts() {
            const elements = document.querySelectorAll('[data-i18n]');
            elements.forEach(el => {
                const key = el.getAttribute('data-i18n');
                if (key) {
                    el.innerHTML = i18nStore.t(key);
                }
            });

            // Update Dynamic Hero if selected
            if (currentView) {
                const title = document.getElementById('hero-title');
                const subtitle = document.getElementById('hero-subtitle');
                const badge = document.getElementById('view-badge');
                
                title.innerHTML = i18nStore.t(content[currentView].titleKey);
                subtitle.textContent = i18nStore.t(content[currentView].subtitleKey);
                badge.textContent = i18nStore.t(content[currentView].badgeKey);
            }

            // Update Switcher
            const langLabel = document.getElementById('langLabel');
            if (langLabel) {
                langLabel.textContent = i18nStore.current === 'es' ? 'English' : 'Español';
            }
        }

        window.selectView = function(view) {
            currentView = view;
            const entry = document.getElementById('entry-selector');
            const main = document.getElementById('main-content');
            const badge = document.getElementById('view-badge');
            const bizSect = document.getElementById('business-exclusive');
            const appsSect = document.getElementById('apps');
            const navAppsLink = document.getElementById('nav-apps-link');
            const glow = document.getElementById('hero-glow');

            updateTexts();
            
            badge.className = `ml-4 px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest border ${content[view].badgeClass}`;
            glow.style.backgroundColor = content[view].glowColor;

            if (view === 'business') {
                bizSect.classList.remove('hidden');
                appsSect.classList.remove('hidden');
                navAppsLink.classList.remove('hidden');
                const mobileNavAppsLink = document.getElementById('mobile-nav-apps-link');
                if (mobileNavAppsLink) mobileNavAppsLink.classList.remove('hidden');
            } else {
                bizSect.classList.add('hidden');
                appsSect.classList.add('hidden');
                navAppsLink.classList.add('hidden');
                const mobileNavAppsLink = document.getElementById('mobile-nav-apps-link');
                if (mobileNavAppsLink) mobileNavAppsLink.classList.add('hidden');
            }

            entry.style.opacity = '0';
            entry.style.transition = 'opacity 0.5s ease';
            
            setTimeout(() => {
                entry.classList.add('hidden');
                main.classList.remove('hidden');
                window.scrollTo(0, 0);
            }, 500);
        }

        // Handle switcher click
        const langSwitcher = document.getElementById('langSwitcher');
        if (langSwitcher) {
            langSwitcher.addEventListener('click', async () => {
                const nextLang = i18nStore.current === 'es' ? 'en' : 'es';
                await i18nStore.setLanguage(nextLang);
                updateTexts();
            });
        }

        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileNav = document.getElementById('mobileNav');
        const mobileNavLinks = mobileNav?.querySelectorAll('a, button');
        
        if (mobileMenuBtn && mobileNav) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileNav.classList.toggle('hidden');
            });
            
            // Close menu when clicking a link
            mobileNavLinks?.forEach(link => {
                link.addEventListener('click', () => {
                    mobileNav.classList.add('hidden');
                });
            });
        }

        // Initialize on load
        if (typeof window !== 'undefined') {
            i18nStore.init().then(() => {
                updateTexts();
            });
        }
    </script>
</body>
</html>
